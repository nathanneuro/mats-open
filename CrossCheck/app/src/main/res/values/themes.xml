<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CrossCheck" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color (purple) -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/purple_darker</item>
        <item name="colorOnSecondary">@color/text_white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/text_light_grey</item>
        <item name="colorOnBackground">@color/text_light_grey</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_light_grey</item>
        <item name="android:textColorSecondary">@color/text_medium_grey</item>
        <item name="android:textColorHint">@color/text_medium_grey</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/dark_background</item>
    </style>
</resources>
