<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface"
        app:title="@string/settings"
        app:titleTextColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Arrow Keys Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arrow_keys"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/arrow_position"
                android:textColor="@color/text_primary" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <RadioButton
                    android:id="@+id/radioArrowRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right_side"
                    android:textColor="@color/text_primary"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioArrowLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="@string/left_side"
                    android:textColor="@color/text_primary" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/button_opacity"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/seekbarOpacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="40" />

                <TextView
                    android:id="@+id/textOpacityValue"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="40%"
                    android:textColor="@color/text_secondary"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Display Section -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/display"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Terminal font size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/font_size"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFontMinus"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:text="−"
                    android:textSize="18sp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <TextView
                    android:id="@+id/textFontSizeValue"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="14sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFontPlus"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </LinearLayout>

            <!-- Thinking bar font size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Thinking bar font"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnThinkingFontMinus"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:text="−"
                    android:textSize="18sp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <TextView
                    android:id="@+id/textThinkingFontSizeValue"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="13sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnThinkingFontPlus"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </LinearLayout>

            <!-- Tmux bar font size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tmux bar font"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTmuxFontMinus"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:text="−"
                    android:textSize="18sp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <TextView
                    android:id="@+id/textTmuxFontSizeValue"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="12sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTmuxFontPlus"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchKeepScreenOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/keep_screen_on"
                android:textColor="@color/text_primary"
                android:checked="true" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchShowExtraKeys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/show_extra_keys"
                android:textColor="@color/text_primary"
                android:checked="true" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchVibrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/vibrate_on_press"
                android:textColor="@color/text_primary" />

            <!-- History Section -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/history"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSaveHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/save_history_between_sessions"
                android:textColor="@color/text_primary"
                android:checked="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonClearHistory"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/clear_all_history"
                android:textColor="@color/error" />

            <!-- Save button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/save_settings"
                app:backgroundTint="@color/accent" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
